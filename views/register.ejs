<% include ./partials/header %>

<h1 class="form-header d-flex justify-content-center miniLogo">Register for a FilmR8R Account</h1>
<div class="container">
    <div class="row">
		<div class="review-form">
            <form action="/register" method="POST">
                <div class="form-group">
					<label for="usermame">Username</label>
                    <input class="form-control" type="text" name="username" placeholder="Username" id="username">
                </div>
				<div class="form-group">
					<label for="password">Password</label>
                    <input class="form-control" type="password" name="password" placeholder="Password" id="password">
                </div>
				<div class="form-group">
					<label for="secret-code">Secret Code</label>
                    <input class="form-control" type="text" name="adminCode" placeholder="Secret Code" id="secret-code">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-outline-success btn-block">Sign Up</button>
                </div>
            </form>
            <a href="/movies">Go Back</a>
        </div>
    </div>
</div>


<% include ./partials/footer %>