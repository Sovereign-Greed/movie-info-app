<% include ../partials/header %>

<div class="container">
    <div class="row">
		<div class="col-sm-12">
			<h1 class="form-header miniLogo">Edit your Comment</h1>
		</div>
		<div class="review-form">
            <form action="/movies/<%= movie_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
					<label for="comment-text">Comment Text</label>
					<textarea class="form-control" name="comment[text]" id="comment-text" rows="1"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-outline-success btn-block">Submit!</button>
                </div>
            </form>
            <a href="/movies/<%= movie_id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>